{
  "compilerOptions": {
    "module": "CommonJS",         
    "outDir": "dist",
    "strict": true,                              // All strict type-checking options
    "esModuleInterop": true,                     // For importing CommonJS modules like Express
    "forceConsistentCasingInFileNames": true,    // Catch inconsistent imports
    "moduleResolution": "node",                  // Resolve modules like Node.js
    "skipLibCheck": true,                        // Skip type checks on `node_modules`
    "resolveJsonModule": true,                   // Allow importing JSON files
    "types": ["node", "express"],                // Include type definitions
    "noImplicitAny": true,                       // Prevent untyped variables
    "noUnusedLocals": false,                      // Warn on unused variables
    "noUnusedParameters": false, 
  },
  "include": ["src/main.ts","src/utils"],
  "exclude": ["node_modules", "dist"]
}
