{
  "extends": "@react-native/typescript-config",
  "include": ["App.tsx", "src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": ["**/node_modules", "**/Pods", "**/__tests__/**"],
    "compilerOptions": {
    "strict": true,
    "types": ["react", "react-native", "jest"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/app/*": ["src/app/*"],
      "@/features/*": ["src/features/*"],
      "@/shared/*": ["src/shared/*"]
    }
  }
}
